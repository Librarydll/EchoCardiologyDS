<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EchoCardiologyDS.Views"
        xmlns:EchoCardiologyDS="clr-namespace:EchoCardiologyDS" x:Class="EchoCardiologyDS.Views.MainView"
        mc:Ignorable="d"          
        WindowState="Maximized"
        Title="CardeologyDS" Height="1500" Width="1400">
    <Window.Resources>
        <Style TargetType="{x:Type Control}" x:Key="baseStyle">
            <Setter Property="Padding" Value="0 3" />
        </Style>
        <Style TargetType="{x:Type ComboBox}" x:Key="ComboBoxValue">
            <Setter Property="SelectedIndex" Value="0"/>
        </Style>
        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource ComboBoxValue}"/>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource baseStyle}"/>
    </Window.Resources>
    <ScrollViewer>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ToolBar Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal">
                    <Button Background="White" x:Name="CreateNewWindowButton" Padding="5"  Margin="3 3 5 3">
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="0 0 2 0" Height="20" Source="/Resources/AddUser.png"/>
                            <TextBlock>Новый пациент</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Background="White" x:Name="SettingButton" Padding="5" Margin="3 3 5 3">
                        <StackPanel Orientation="Horizontal">
                            <Image  Margin="0 0 2 0" Height="20" Source="/Resources/setting.png"/>
                            <TextBlock>Настройки</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Background="White" x:Name="ConnectToDB" Padding="5" Margin="3 3 5 3">
                        <StackPanel Orientation="Horizontal">
                            <Image  Margin="0 0 2 0" Height="20" Source="/Resources/connectdatabase.png"/>
                            <TextBlock>Подключиться к базе</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Background="White" x:Name="PatientListButton"  Padding="5" Margin="3 3 5 3">
                        <StackPanel Orientation="Horizontal">
                            <Image  Margin="0 0 2 0" Height="20" Source="/Resources/patientsicon.png"/>
                            <TextBlock>Пациенты</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Visibility="Collapsed" Padding="5" Margin="3 3 5 3" Content="О нас"/>
                </StackPanel>
            </ToolBar>
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                <!--Начало-->
                <StackPanel Margin="0 4 0 4" Orientation="Horizontal">
                    <Label Content="Ф.И.О пациента"/>
                    <TextBox x:Name="FIOtb"  Width="250"/>
                    <Label Content="Пол"/>
                    <RadioButton x:Name="JenderMRb"  Margin="5">
                        <TextBlock><Run Text="M"/></TextBlock>
                    </RadioButton>

                    <RadioButton x:Name="JenderWRb" Margin="5">
                        <TextBlock><Run Text="Ж"/></TextBlock>
                    </RadioButton>
                    <ComboBox DisplayMemberPath="Name" Width="100" Margin="5 0 5 0" x:Name="AgeComboBox" SelectedItem="{Binding SelectedChildAge}"></ComboBox>
                    <Label Content="Масса тела"/>
                    <TextBox x:Name="Weigthtb" Width="65"  />
                    <Label Content="Рост"/>
                    <TextBox x:Name="Heighttb"  Width="65" />
                    <Label Content="BSA"/>
                    <TextBox x:Name="BSAtb"  Width="75" Padding="3" />
                    <Label>Дата рождения</Label>
                    <TextBox Width="100" x:Name="BirthDay">
                        
                    </TextBox>
                </StackPanel>
                <!--Второая строка-->
                <StackPanel Margin="0 0 0 4" Orientation="Horizontal">
                    <Label Content="Направляющее отделение"/>
                    <TextBox x:Name="DirectDepartment" Width="220" Padding="3"/>
                    <Label Content="Oтделение(исследование)"/>
                    <TextBox x:Name="ResearchName" Width="250" Text="Функциональная диагностика"/>
                    <Label Content="N ИБ/Амбулаторной карты"/>
                    <TextBox x:Name="CardNumber" Width="180"/>
                </StackPanel>
                <StackPanel Margin="0 0 0 4" Orientation="Horizontal">
                    <Label Content="Дата и время исследования"/>
                    <TextBox x:Name="TodayDate" IsEnabled="False" Width="120"/>
                    <Label Content="Врач"/>
                    <ComboBox SelectedItem="{Binding SelectedDoctor}" x:Name="DoctorComboBox"  Width="250"/>
                    <Label Content="Цель исследования"/>
                    <TextBox x:Name="ResearchAim" Width="420" />
                </StackPanel>
            </StackPanel>
            <!--Grid ROW2-->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Vertical">
                <StackPanel Margin="0 2 0 4" Orientation="Horizontal">
                    <Label Content="Аппарат"/>
                    <ComboBox  SelectedIndex="{Binding Path=ApparatIndex}" SelectedItem="{Binding SelectedApparat}" x:Name="ApparatComboBox" Width="185"/>
                    <Label Content="Качество визуализации"/>
                    <ComboBox SelectedIndex="{Binding Path=QualityIndex}" SelectedItem="{Binding SelectedVisualizationQuality}" x:Name="VisualizationQualityComboBox" Padding="3" Width="185"/>
                    <Label Content="Экг ритм"/>
                    <ComboBox SelectedIndex="{Binding Path=ECGIndex}" SelectedItem="{Binding SelectedECG}" x:Name="ECGComboBox" Margin="2 0 5 0"  Width="185"/>
                    <TextBox x:Name="ECG1" Margin="2 0 5 0" Width="200"/>
                    <TextBox x:Name="ECG2" Width="83"/>
                </StackPanel>
                <!--Первая строка-->
                <StackPanel Margin="0 0 0 4" Orientation="Horizontal">
                    <Label Content="Левое предсердие (ЛП)"/>
                    <TextBox x:Name="LeftAtrium" Width="80"/>
                    <Label Content="Правый желудочек"/>
                    <ComboBox SelectedIndex="{Binding Path=RightStomachIndex}" SelectedItem="{Binding SelectedRigthStomach}" x:Name="RigthStomachComboBox" Margin="0 0 5 0" Padding="3" Width="120"/>
                    <TextBox x:Name="RightStomach" Margin="0 0 5 0" Padding="3" Width="80"/>
                    <TextBlock TextWrapping="Wrap" Width="150"><Run Text="Толщина нижне-боковой стенки левого желудочка"/></TextBlock>
                    <TextBox x:Name="ThicknessLowerWallLeftStomach" Width="80"/>
                    <TextBlock   Margin="5 0 0 0" TextWrapping="Wrap" Width="250"><Run Text="Относительная толщина стенки левого желудочка"/></TextBlock>
                    <TextBox x:Name="RelativeThicknessLeftStomach" Width="75"/>
                </StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition  Width="*"/>
                        <ColumnDefinition  Width="*"/>
                        <ColumnDefinition  Width="*"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Аорта">
                        <StackPanel>
                            <DockPanel Margin="0 2 0 2">
                                <Label Content="Фиброзное кольцо"/>
                                <TextBox x:Name="Circle" Padding="3" Width="80" HorizontalAlignment="Right"/>
                            </DockPanel>
                            <DockPanel Margin="0 2 0 2">
                                <Label Content="Синусы Вальсальвы"/>
                                <TextBox x:Name="SinusValsav" Width="80" HorizontalAlignment="Right"/>
                            </DockPanel>
                            <DockPanel Margin="0 2 0 2">
                                <Label Content="Синотубулярный контакт"/>
                                <TextBox x:Name="SinobulyarContact" Padding="3"  Width="80" HorizontalAlignment="Right"/>
                            </DockPanel>
                            <DockPanel Margin="0 2 0 2">
                                <Label Content="Восходящий отдел"/>
                                <TextBox x:Name="AriseDepartament"  Width="80" HorizontalAlignment="Right"/>
                            </DockPanel>
                            <DockPanel Margin="0 2 0 2">
                                <Label Content="Дуга"/>
                                <TextBox x:Name="Arc" Width="80" HorizontalAlignment="Right"/>
                            </DockPanel>
                            <DockPanel Margin="0 2 0 2">
                                <Label Content="Нисходящий отдел"/>
                                <TextBox x:Name="AortaDepartament" Width="80" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </StackPanel>
                    </GroupBox>
                    
                    <StackPanel Grid.Column="1">
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock><Run Text="Толщина стенки правого желудочка"/></TextBlock>
                            <TextBox x:Name="ThicknessWallRightStomach" Height="25" Width="80" HorizontalAlignment="Right"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock Width="210" TextWrapping="Wrap"><Run Text="Толщина межжелудочковой перегородки(МЖП)"/></TextBlock>
                            <TextBox x:Name="ThicknessMejPereMJP" Height="25" Width="80" HorizontalAlignment="Right"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock><Run Text="Толщина базального сегмента МЖП"/></TextBlock>
                            <TextBox x:Name="ThicknessBazalSegment" Height="25" Width="80" HorizontalAlignment="Right"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock  Width="90" TextWrapping="Wrap"><Run Text="Тип утолщения миокарда"/></TextBlock>
                            <ComboBox SelectedIndex="{Binding Path=MiokardIndex}" SelectedItem="{Binding SelectedMiokard}" x:Name="MiokardComboBox" Width="130" HorizontalAlignment="Right"/>
                            <TextBox x:Name="TypeThicknessMiokard" Height="25" Width="80" HorizontalAlignment="Right"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock><Run Text="Эхогенность миокарда"/></TextBlock>
                            <ComboBox SelectedIndex="{Binding Path=EchoMiokardIndex}" SelectedItem="{Binding SelectedEchoMiokard}" Width="150" x:Name="EchoMiokardComboBox" HorizontalAlignment="Right"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock ><Run Text="Толщина МЖП в систолу"/></TextBlock>
                            <TextBox x:Name="ThicknessMJPSislotu" Height="25" Width="80" HorizontalAlignment="Right"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock><Run Text="Амплитуда движения МЖП"/></TextBlock>
                            <TextBox x:Name="AmplitudeMovementMJP" Height="25" Width="80" HorizontalAlignment="Right"/>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Margin="0 0 5 0">
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock Margin="4 0 0 0" TextWrapping="Wrap" Width="200"><Run Text="Толщина нижне-боковой стенки левого желудочка в систолу"/></TextBlock>
                            <TextBox x:Name="ThicknessLowerWallLeftStomachSislotu" Height="25" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock  Margin="4 0 0 0" TextWrapping="Wrap" Width="200"><Run Text="Амплитуда движения нижне-боковой стенки ЛЖ"/></TextBlock>
                            <TextBox x:Name="AmplitudeMovementLowerWall" Height="25" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock Margin="4 0 0 0" TextWrapping="Wrap" Width="200"><Run Text="Конечно-систолический размер левого желудочка(КСР)"/></TextBlock>
                            <TextBox x:Name="LastSislotSizeLeftStomach" Height="25" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock Margin="4 0 0 0" Width="200"><Run Text="Фракция ускорения (ФУ)"/></TextBlock>
                            <TextBox x:Name="FractionAcceleration" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}"/>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="3">
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock  Width="220" Margin="4 0 0 0"><Run Text="Движение МЖП"/></TextBlock>
                            <ComboBox SelectedIndex="{Binding Path=MovementIndex}" SelectedItem="{Binding SelectedMovement}" x:Name="MovementComboBox" Height="25" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock  TextWrapping="Wrap" Width="220" Margin="4 0 0 0"><Run Text="Скорость на клапоне легочной (ЛК) артерии"/></TextBlock>
                            <TextBox x:Name="VelocityVavlvePulmonaryArtery" Height="25" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock Margin="4 0 0 0" Width="220" TextWrapping="Wrap"><Run Text="Максимальный градиент давления на клапане легоной артерии"/></TextBlock>
                            <TextBox x:Name="MaxGradientPressurePulmonaryArtery" Height="25" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}"/>
                        </DockPanel>
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock  Margin="4 0 0 0" Width="220" TextWrapping="Wrap"><Run Text="Расчет индекса массы МЖ"/></TextBlock>
                            <ComboBox SelectedIndex="{Binding Path=EvaluateIndex}" SelectedItem="{Binding SelectedEvaluateIndex}" x:Name="EvaluateIndexComboBox" Height="30" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}"/>
                        </DockPanel>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox Margin="0 4 0 0" Content="Амилоидоз"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock Margin="2 2 0 0"><Run Text="Раскрытие аортального клапана"/></TextBlock>
                            <TextBox x:Name="OpenAorthValve" Margin="0 2 5 0" Height="25" Width="80" HorizontalAlignment="Right"/>
                        </DockPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <DockPanel Margin="0 2 0 2">
                            <TextBlock  Width="200" TextWrapping="Wrap"><Run Text="Конечно диастолический размер левого желудочка(КДР)"/></TextBlock>
                            <TextBox x:Name="LastDiastolSizeLeftStomach"  Height="25" Width="80" HorizontalAlignment="Right"/>
                        </DockPanel>
                    </StackPanel>
                </Grid>

            </StackPanel>
            <StackPanel Grid.Row="3" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding LeftStomachChecked}" Grid.ColumnSpan="2" Grid.Row="0" Margin="5 0 0 4" Content="Оценка диастолической функции левого желудочка"/>
                    <StackPanel Grid.ColumnSpan="2" Grid.Row="1" Margin="0 0 0 4" Orientation="Horizontal">
                        <Label Content="Ск. на МК"/>
                        <Label Content="Пик Е"/>
                        <TextBox x:Name="LSPickE" Width="65"/>
                        <StackPanel Orientation="Horizontal" Visibility="{Binding LeftStomachVisibility}">
                            <Label Content="Пик A"/>
                            <TextBox x:Name="LSPickA" Width="65"/>
                            <Label Content="E/A"/>
                            <TextBox x:Name="LSEA" Width="65"/>
                            <Label Content="e's"/>
                            <TextBox x:Name="LSES" Width="65"/>
                            <Label Content="e'l"/>
                            <TextBox x:Name="LSEL" Width="65"/>
                            <Label Content="E/e'"/>
                            <TextBox x:Name="LSEE" Width="65"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Visibility="{Binding LeftStomachVisibility}" Grid.ColumnSpan="2" Grid.Row="2" Margin="0 0 0 4" Orientation="Horizontal">
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="DT"/>
                        <TextBox x:Name="LSDT" Width="75" Height="25"/>
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="IVRS"/>
                        <TextBox x:Name="LSIVRS" Width="75" Height="25"/>
                        <GroupBox Margin="25 0 0 0" Header="Кровоток в легочный венах" Width="428">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="S"/>
                                <TextBox x:Name="LSS" Width="80"/>
                                <Label Content="D"/>
                                <TextBox x:Name="LSD" Width="80"/>
                                <Label Content="S/D"/>
                                <TextBox x:Name="LSSD" Width="80"/>
                                <Label Content="Z"/>
                                <TextBox x:Name="LSZ" Width="80"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                    <DockPanel  Grid.Row="3">
                        <TextBlock Margin="5 0 0 0" TextWrapping="Wrap" Width="160"><Run Text="Максимальный градиент на митральном клапане"/></TextBlock>
                        <TextBox x:Name="LSMaxGradientMitralValve" HorizontalAlignment="Right" Width="80"/>

                    </DockPanel>
                    <DockPanel Grid.Row="3" Grid.Column="2">
                        <TextBlock Margin="5 0 0 0" HorizontalAlignment="Right" TextWrapping="Wrap" Width="160"><Run Text="Средний градиент на митральном клапане"/></TextBlock>
                        <TextBox x:Name="LSAverageGradientMitralValve" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}"/>
                    </DockPanel>
                    <CheckBox IsChecked="{Binding RightFunctionChecked}" Margin="5 5 0 4" Grid.Row="4" Content="Оценка диастолической функции правого желудочка"/>
                    <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <Label Content="Ск. на ТК"/>
                        <Label Content="Пик Е"/>
                        <TextBox x:Name="RSFPickE" Width="65"/>
                        <StackPanel Visibility="{Binding RightFunctionVisibility}" Orientation="Horizontal">
                            <Label Content="Пик A"/>
                            <TextBox x:Name="RSFPickA" Width="65"/>
                            <Label Content="E/A"/>
                            <TextBox x:Name="RSFPickEA" Width="65"/>
                            <Label Content="DT"/>
                            <TextBox x:Name="RSFPickDT" Width="65"/>
                            <Label Content="e'l"/>
                            <TextBox x:Name="RSFPickEL" Width="65"/>
                            <Label Content="E/e'l"/>
                            <TextBox x:Name="RSFPickEEL" Width="65"/>
                        </StackPanel>
                    </StackPanel>
                    <DockPanel Grid.Row="6" Margin="0 5 0 2">
                        <TextBlock Margin="5 0 0 5" TextWrapping="Wrap" Width="140"><Run Text="Максимальный градиент на трикуспидальном клапане"/></TextBlock>
                        <TextBox x:Name="RSFPMaxGradientTricuspidil" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}" Padding="0 15" />
                    </DockPanel>
                    <DockPanel Margin="0 5 0 2" Grid.Row="6" Grid.Column="2">
                        <TextBlock  Margin="5 0 0 5" TextWrapping="Wrap" Width="180"><Run Text="Средний градиент давления на трикуспидальном клапане"/></TextBlock>
                        <TextBox x:Name="RSFPAverageGradientPressureTrucuspidil" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}" Padding="0 7" />
                    </DockPanel>
                    <DockPanel Margin="0 5 0 2" Grid.Row="7">
                        <TextBlock Margin="5 0 0 5" TextWrapping="Wrap" Width="140"><Run Text="Скорость в выходном тракте левого желудочка"/></TextBlock>
                        <TextBox x:Name="RSFPVelocityLeftStomach" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}" Padding="0 15" />
                    </DockPanel>
                    <DockPanel Margin="0 5 0 2" Grid.Row="7" Grid.Column="2">
                        <TextBlock Margin="5 0 0 5" TextWrapping="Wrap" Width="180"><Run Text="Максимальный градиент в выходном тракте левого желудочка"/></TextBlock>
                        <TextBox x:Name="RSFPMaxGradientLeftStomach" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}" Padding="0 15" />
                    </DockPanel>
                    <DockPanel Margin="0 5 0 2" Grid.Row="8">
                        <TextBlock Margin="5 0 0 5" TextWrapping="Wrap" Width="140"><Run Text="Скорость на аортальном клапане"/></TextBlock>
                        <TextBox x:Name="RSFPVelocityAortValve" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}" Padding="0 7" />
                    </DockPanel>
                    <DockPanel Margin="0 5 0 2" Grid.Row="8" Grid.Column="2">
                        <TextBlock Margin="5 0 0 5" TextWrapping="Wrap" Width="180"><Run Text="Максимальный градиент на аортальном клапане"/></TextBlock>
                        <TextBox x:Name="RSFPMaxGradientAortValue" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}" Padding="7"/>
                    </DockPanel>
                    <DockPanel Margin="0 5 0 2" Grid.Row="9">
                        <TextBlock  Margin="5 0 0 5" TextWrapping="Wrap" Width="140"><Run Text="Средний градиент на аортальном клапане"/></TextBlock>
                        <TextBox x:Name="RSFPAverageGradientAortValue" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}" Padding="7" />
                    </DockPanel>
                    <DockPanel Margin="0 5 0 2" Grid.Row="9" Grid.Column="2">
                        <TextBlock Width="180" Margin="5 0 0 5" TextWrapping="Wrap" ><Run Text="Конечно-диастолический объем ЛЖ"/></TextBlock>
                        <TextBox x:Name="RSFPLastVolumeLJ" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}" Padding="7"/>
                    </DockPanel>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Grid.Row="10">
                    <StackPanel Margin="0 4 0 4" Orientation="Horizontal">
                        <Label Content="ФВ"/>
                        <TextBox x:Name="RSFPFV" Width="65"/>
                        <Label Content="%"/>
                        <ComboBox SelectedIndex="{Binding Path=FVIndex}" SelectedItem="{Binding SelectedFV}" Width="200" x:Name="FVComboBox"/>
                        <Label Content="КСО"/>
                        <TextBox x:Name="RSFPKSO" Width="55"/>
                        <Label Content="УОК"/>
                        <TextBox x:Name="RSFPUOK" Width="55"/>
                        <Label Content="MOK"/>
                        <TextBox x:Name="RSFPMOK" Width="55"/>
                        <Label Content="GLS"/>
                        <TextBox x:Name="RSFPKSOGLS" Width="55"/>
                        <Label Content="dp/dt"/>
                        <TextBox x:Name="RSFPdpdt" Width="55"/>
                    </StackPanel>
                    </ScrollViewer>
                    <DockPanel Margin="0 5 0 2" Grid.Row="11">
                        <TextBlock Margin="5 0 0 5" TextWrapping="Wrap" Width="140"><Run Text="Максимальный объем левого предсердия(ЛП)"/></TextBlock>
                        <TextBox x:Name="RSFPMaxValomeLeftAtrium" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}" Padding="0 7"/>
                    </DockPanel>
                    <DockPanel Margin="0 5 0 2" Grid.Row="11" Grid.Column="2">
                        <TextBlock Margin="5 0 0 5" TextWrapping="Wrap" Width="180"><Run Text="Максимальный объем правого предсердия(ПП)"/></TextBlock>
                        <TextBox x:Name="RSFPMaxValomeRightAtrium" Width="{Binding ActualWidht, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DockPanel}}}" Padding="0 7"/>
                    </DockPanel>
                    <DockPanel Margin="0 5 0 2" Grid.Row="12" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="55*"/>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="55*"/>
                            </Grid.ColumnDefinitions>
